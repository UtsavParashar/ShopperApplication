<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <TextView
        android:id="@+id/verification_verification_code_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:text="@string/verification_verification_code_textView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/verification_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/verification_submit_button"
        android:layout_alignBottom="@+id/verification_submit_button"
        android:layout_alignRight="@+id/verification_verification_code_textView"
        android:background="@color/widgets"
        android:text="@string/cancel_button" />

    <Button
        android:id="@+id/verification_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verification_verification_code_textView"
        android:layout_below="@+id/verification_verification_code_editText"
        android:layout_marginTop="21dp"
        android:background="@color/widgets"
        android:text="@string/submit_button" />

    <EditText
        android:id="@+id/verification_verification_code_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verification_submit_button"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/verification_verification_code_EditText"
        android:inputType="numberPassword"
        android:maxLength="4" />

</RelativeLayout>